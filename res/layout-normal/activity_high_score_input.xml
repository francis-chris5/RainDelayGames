<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HighScoreClasses.HighScoreInputActivity">

    <EditText
        android:id="@+id/txtNewHighScoreName"
        android:layout_width="@dimen/one_third_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/txtName"
        android:inputType="textPersonName"
        android:textSize="@dimen/one_third_text_size"
        app:layout_constraintStart_toStartOf="@+id/lblNamePrompt"
        app:layout_constraintTop_toBottomOf="@+id/lblNamePrompt" />

    <TextView
        android:id="@+id/lblNamePrompt"
        android:layout_width="@dimen/one_third_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/lblName"
        android:textSize="@dimen/one_third_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDone"
        android:layout_width="@dimen/one_third_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="@string/btnDone"
        app:layout_constraintStart_toStartOf="@+id/txtNewHighScoreName"
        app:layout_constraintTop_toBottomOf="@+id/txtNewHighScoreName" />
</android.support.constraint.ConstraintLayout>